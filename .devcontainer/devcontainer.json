{
    "name": "R Development",
    "image": "ghcr.io/rocker-org/devcontainer/r-ver:4",
    "features": {
        "ghcr.io/rocker-org/devcontainer-features/renv-cache:latest": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "posit.air-vscode"
            ],
            "settings": {
                "r.editor.formatOnSave": true,
                "r.editor.defaultFromatter": "posit.air-vscode"
            }
        }
    },
    "postCreateCommand": "R -q -e 'renv::install()' && R -q -e 'renv::init()'"
}